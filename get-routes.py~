import sys
import requests

key = sys.argv[1]
secret = sys.argv[2]

query = dict()
query['close_to_location'] = sys.argv[3]
query['search_radius'] = int(sys.argv[4])

headers = dict()
headers['api-key'] = key
headers['authorization'] = secret

req = requests.request('GET',
                       'https://api.mapmyfitness.com/v7.1/route/',
                       params=query,
                       headers=headers)

print req.text
print req.status_code
print req.reason
